body.photo_show
  header
    h1
      a href="index.html" Photography by {{site_metadata.author_name}}
  main
    h2
      | {{photo.title}}
    img src="images/photos/{{photo.hash}}.{{photo.file_name}}"
    p.description
      | {{photo.description}}
    p.settings f/{{photo.aperture}}, {{photo.shutter_speed}}, ISO {{photo.iso}}.
    p.camera
      | {{photo.camera_name}}

    .streams
      |
        {{#each substreams as |stream|}}
        <section>
          <h2>{{stream.title}}</h2>
          <div class="stream">
      == Piccle::TemplateHelpers.render_partial "substream"
      |
          </div>
        </section>
        {{/each}}

